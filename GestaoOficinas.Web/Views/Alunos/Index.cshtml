@model GestaoOficinas.Web.Models.AlunoListViewModel

@{
    ViewData["Title"] = "Alunos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Gestão de Alunos</h2>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fa-solid fa-plus me-1"></i> Novo Aluno
    </a>
</div>

<form method="get" class="row g-2 mb-4">
    <div class="col-auto">
        <input type="text" name="busca" class="form-control" placeholder="Buscar por Nome ou RA..." value="@Model.TermoBusca">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-secondary">Buscar</button>
    </div>
</form>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="text-white" style="background-color: #13293D;">
                    <tr>
                        <th class="ps-4">Nome</th>
                        <th>RA</th>
                        <th>Email</th>
                        <th style="min-width: 200px;">Turmas Vinculadas</th>
                        <th class="text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Alunos != null && Model.Alunos.Any())
                    {
                        foreach (var item in Model.Alunos)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-secondary">@item.NomeAluno</td>
                                <td>@item.RaAluno</td>
                                <td>@item.EmailAluno</td>
                                <td>
                                    @if (item.NomesTurmas != null && item.NomesTurmas.Any())
                                    {
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var turma in item.NomesTurmas)
                                            {
                                                <span class="badge bg-secondary bg-opacity-75 text-white fw-normal">
                                                    @turma
                                                </span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small fst-italic">Não matriculado</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.IdAluno" class="btn btn-sm btn-warning text-white" title="Editar">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.IdAluno" method="post" class="d-inline" onsubmit="return confirm('Deseja realmente excluir este aluno?');">
                                            <button type="submit" class="btn btn-sm btn-danger ms-1" title="Excluir">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-user-graduate fa-2x mb-3 d-block"></i>
                                Nenhum aluno encontrado.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.TotalPaginas > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPaginas; i++)
            {
                <li class="page-item @(i == Model.PaginaAtual ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@i" asp-route-busca="@Model.TermoBusca">@i</a>
                </li>
            }
        </ul>
    </nav>
}