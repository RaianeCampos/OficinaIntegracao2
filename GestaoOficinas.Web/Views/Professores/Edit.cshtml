@model GestaoOficinas.Application.DTOs.UpdateProfessorDto

@{
    ViewData["Title"] = "Editar Professor";
}

<div class="container-fluid">
    <h2 class="text-primary mb-4"><i class="fa-solid fa-pen-to-square me-2"></i>Editar Professor</h2>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form asp-action="Edit">

                <input type="hidden" asp-for="IdProfessor" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NomeProfessor" class="form-label">Nome Completo</label>
                        <input asp-for="NomeProfessor" class="form-control" />
                        <span asp-validation-for="NomeProfessor" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="EmailProfessor" class="form-label">Email</label>
                        <input asp-for="EmailProfessor" class="form-control" type="email" />
                        <span asp-validation-for="EmailProfessor" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="TelefoneProfessor" class="form-label">Telefone</label>
                        <input asp-for="TelefoneProfessor" class="form-control telefone-mask" />
                        <span asp-validation-for="TelefoneProfessor" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="CargoProfessor" class="form-label">Cargo / Função</label>
                        <input asp-for="CargoProfessor" class="form-control" placeholder="Ex: Docente, Coordenador" />
                        <span asp-validation-for="CargoProfessor" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="IdEscola" class="form-label">Escola Vinculada</label>
                        <select asp-for="IdEscola" asp-items="ViewBag.ListaEscolas" class="form-select">
                            <option value="">Selecione uma escola...</option>
                        </select>
                        <span asp-validation-for="IdEscola" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ConhecimentoProfessor" class="form-label">Tags de Conhecimento (separadas por vírgula)</label>
                    <input asp-for="ConhecimentoProfessor" class="form-control" placeholder="Ex: Matemática, Robótica, Artes" />
                    <span asp-validation-for="ConhecimentoProfessor" class="text-danger"></span>
                </div>

                <hr />
                <h6 class="text-muted mb-3">Permissões e Atribuições</h6>

                <div class="d-flex gap-4">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="Representante" id="checkRep">
                        <label class="form-check-label" for="checkRep">É Representante da Escola?</label>
                    </div>

                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="Administrador" id="checkAdm">
                        <label class="form-check-label fw-bold text-primary" for="checkAdm">Acesso de Administrador</label>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4 gap-2">
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}