@model IEnumerable<GestaoOficinas.Application.DTOs.ProfessorViewModel>

@{
    ViewData["Title"] = "Professores";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fa-solid fa-chalkboard-user me-2"></i>Professores</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fa-solid fa-plus me-1"></i> Novo Professor
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Nome</th>
                            <th>Email</th>
                            <th class="text-center">Representante</th>
                            <th class="text-center">Escola (ID)</th>
                            <th class="text-end pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-secondary">@item.NomeProfessor</td>
                                    <td>@item.EmailProfessor</td>
                                    <td class="text-center">
                                        @if (item.Representante)
                                        {
                                            <span class="badge bg-success rounded-pill">Sim</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-muted border rounded-pill">Não</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info text-dark">@item.IdEscola</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.IdProfessor" class="btn btn-sm btn-outline-warning" title="Editar">
                                                <i class="fa-solid fa-pen"></i>
                                            </a>
                                            <!-- Botão de Exclusão (requer form para segurança) -->
                                            <!-- Implementar modal ou confirmação JS -->
                                            <a asp-action="Delete" asp-route-id="@item.IdProfessor" class="btn btn-sm btn-outline-danger" title="Excluir" onclick="return confirm('Deseja realmente excluir este professor?');">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="fa-solid fa-folder-open fa-2x mb-3 d-block"></i>
                                    Nenhum professor cadastrado.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>