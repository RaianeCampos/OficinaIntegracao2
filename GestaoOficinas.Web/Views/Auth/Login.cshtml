@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - GestãoOficinas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/login.css" />
   
</head>
<body>
    <div class="login-card shadow-lg">
        <div class="login-header">
            <h3><i class="fa-solid fa-graduation-cap"></i> GestãoOficinas</h3>
            <p class="mb-0 text-white-50">Gestão de Oficinas</p>
        </div>
        <div class="login-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label class="form-label text-muted">Usuário</label>
                    <input name="username" class="form-control" required autofocus />
                </div>
                <div class="mb-4">
                    <label class="form-label text-muted">Senha</label>
                    <input name="password" type="password" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-login rounded-pill">ENTRAR</button>
            </form>
        </div>
    </div>
</body>
</html>