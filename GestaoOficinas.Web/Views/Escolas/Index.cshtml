@model GestaoOficinas.Web.Models.EscolaListViewModel
@{
    ViewData["Title"] = "Escolas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Gestão de Escolas</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Nova Escola</a>
</div>

<form method="get" class="row g-2 mb-4">
    <div class="col-auto">
        <input type="text" name="busca" class="form-control" placeholder="Buscar por nome ou CNPJ..." value="@Model.TermoBusca">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-secondary">Buscar</button>
    </div>
</form>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>CNPJ</th>
                    <th>Email</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Escolas.Any())
                {
                    foreach (var item in Model.Escolas)
                    {
                        <tr>
                            <td>@item.NomeEscola</td>
                            <td>@item.CnpjEscola</td>
                            <td>@item.EmailEscola</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.IdEscola" class="btn btn-sm btn-warning text-white"><i class="fa-solid fa-pen"></i></a>
                                <form asp-action="Delete" asp-route-id="@item.IdEscola" method="post" class="d-inline" onsubmit="return confirm('Tem certeza?');">
                                    <button type="submit" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="4" class="text-center p-4">Nenhuma escola encontrada.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

<nav class="mt-3">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.TotalPaginas; i++)
        {
            <li class="page-item @(i == Model.PaginaAtual ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pagina="@i" asp-route-busca="@Model.TermoBusca">@i</a>
            </li>
        }
    </ul>
</nav>