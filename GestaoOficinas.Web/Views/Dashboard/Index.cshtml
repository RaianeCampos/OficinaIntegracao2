@model GestaoOficinas.Application.DTOs.DashboardDto

@{
    ViewData["Title"] = "Dashboard";

    // Lista de frases motivacionais
    var frases = new[]
    {
        new { Autor = "Paulo Freire", Texto = "Ensinar não é transferir conhecimento, mas criar as possibilidades para a sua própria produção ou a sua construção." },
        new { Autor = "Nelson Mandela", Texto = "A educação é a arma mais poderosa que você pode usar para mudar o mundo." },
        new { Autor = "Bill Gates", Texto = "A tecnologia é apenas uma ferramenta. No que se refere a motivar as crianças e conseguir que trabalhem juntas, o professor é o recurso mais importante." },
        new { Autor = "Leonardo da Vinci", Texto = "O aprendizado é a única coisa de que a mente nunca se cansa, nunca tem medo e nunca se arrepende." },
        new { Autor = "Jean Piaget", Texto = "O principal objetivo da educação é criar homens capazes de fazer coisas novas, não simplesmente repetir o que outras gerações fizeram." },
        new { Autor = "Albert Einstein", Texto = "A mente que se abre a uma nova ideia jamais voltará ao seu tamanho original." }
    };

    // Seleciona uma aleatória
    var fraseDoDia = frases[new Random().Next(frases.Length)];
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="text-primary"><i class="fa-solid fa-chart-line me-2"></i>Visão Geral</h2>
        <p class="text-muted">Acompanhe os indicadores principais do projeto.</p>
    </div>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-3">
        <div class="card text-white h-100 shadow-sm border-0" style="background-color: var(--prussian-blue);">
            <div class="card-body d-flex flex-column justify-content-between">
                <div>
                    <h5 class="card-title fw-light"><i class="fa-solid fa-school me-2"></i>Escolas</h5>
                    <p class="card-text display-6 fw-bold">@Model.TotalEscolas</p>
                </div>
                <small class="text-white-50">Parceiras cadastradas</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white h-100 shadow-sm border-0" style="background-color: var(--sapphire-blue);">
            <div class="card-body d-flex flex-column justify-content-between">
                <div>
                    <h5 class="card-title fw-light"><i class="fa-solid fa-user-graduate me-2"></i>Alunos</h5>
                    <p class="card-text display-6 fw-bold">@Model.TotalAlunos</p>
                </div>
                <small class="text-white-50">Total atendido</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white h-100 shadow-sm border-0" style="background-color: var(--celadon-blue);">
            <div class="card-body d-flex flex-column justify-content-between">
                <div>
                    <h5 class="card-title fw-light"><i class="fa-solid fa-chalkboard-user me-2"></i>Professores</h5>
                    <p class="card-text display-6 fw-bold">@Model.TotalProfessores</p>
                </div>
                <small class="text-white-50">Equipe ativa</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white h-100 shadow-sm border-0" style="background-color: var(--carolina-blue);">
            <div class="card-body d-flex flex-column justify-content-between">
                <div>
                    <h5 class="card-title fw-light"><i class="fa-solid fa-shapes me-2"></i>Oficinas Ativas</h5>
                    <p class="card-text display-6 fw-bold">@Model.TotalOficinasAtivas</p>
                </div>
                <small class="text-white-50">Em andamento</small>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card border-0 bg-light shadow-sm text-center">
            <div class="card-body p-5">
                <i class="fa-solid fa-quote-left fa-3x text-primary opacity-25 mb-3"></i>
                <figure class="mb-0">
                    <blockquote class="blockquote">
                        <p class="fs-4 fst-italic text-secondary">
                            "@fraseDoDia.Texto"
                        </p>
                    </blockquote>
                    <figcaption class="blockquote-footer mt-2 fs-6">
                        <cite title="Source Title">@fraseDoDia.Autor</cite>
                    </figcaption>
                </figure>
            </div>
        </div>
    </div>
</div>