@model GestaoOficinas.Application.DTOs.CreateTurmaDto

@{
    ViewData["Title"] = "Nova Turma";
}

<div class="container-fluid">
    <h2 class="text-primary mb-4"><i class="fa-solid fa-shapes me-2"></i>Nova Turma</h2>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label asp-for="NomeTurma" class="form-label">Nome da Turma</label>
                        <input asp-for="NomeTurma" class="form-control" placeholder="Ex: Turma A - Robótica Básica" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="IdOficina" class="form-label">Oficina</label>
                        <select asp-for="IdOficina" asp-items="ViewBag.ListaOficinas" class="form-select">
                            <option value="">Selecione...</option>
                        </select>
                        <span asp-validation-for="IdOficina" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="PeriodoTurma" class="form-label">Período</label>
                        <select asp-for="PeriodoTurma" class="form-select">
                            <option value="">Selecione...</option>
                            <option value="Manhã">Manhã</option>
                            <option value="Tarde">Tarde</option>
                            <option value="Noite">Noite</option>
                            <option value="Integral">Integral</option>
                        </select>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="SemestreTurma" class="form-label">Semestre</label>
                        <select asp-for="SemestreTurma" class="form-select">
                            <option value="">Selecione...</option>
                            <option value="1">1º</option>
                            <option value="2">2º</option>
                        </select>
                    </div>

                </div>

                <div class="d-flex justify-content-end mt-4 gap-2">
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>
