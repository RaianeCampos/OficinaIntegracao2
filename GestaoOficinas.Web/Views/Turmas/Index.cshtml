@model GestaoOficinas.Web.Models.TurmaListViewModel

@{
    ViewData["Title"] = "Turmas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Gestão de Turmas</h2>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fa-solid fa-plus me-1"></i> Nova Turma
    </a>
</div>

<form method="get" class="row g-2 mb-4">
    <div class="col-auto">
        <input type="text" name="busca" class="form-control" placeholder="Buscar turma ou oficina..." value="@Model.TermoBusca">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-secondary">Buscar</button>
    </div>
</form>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="text-white" style="background-color: #13293D;">
                    <tr>
                        <th class="ps-4">Nome da Turma</th>
                        <th>Período</th>
                        <th>Semestre</th>
                        <th>Oficina Vinculada</th>
                        <th class="text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Turmas != null && Model.Turmas.Any())
                    {
                        foreach (var item in Model.Turmas)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-secondary">@item.NomeTurma</td>
                                <td>@item.PeriodoTurma</td>
                                <td>@item.SemestreTurma</td>
                                <td>
                                    <div class="d-flex flex-column" style="line-height: 1.2;">
                                        <span class="fw-semibold">
                                            @(string.IsNullOrEmpty(item.NomeOficina) ? "Não vinculada" : item.NomeOficina)
                                        </span>
                                        <small class="text-muted" style="font-size: 0.75rem;">ID: @item.IdOficina</small>
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.IdTurma" class="btn btn-sm btn-warning text-white"><i class="fa-solid fa-pen"></i></a>
                                        <form asp-action="Delete" asp-route-id="@item.IdTurma" method="post" class="d-inline" onsubmit="return confirm('Excluir turma?');">
                                            <button type="submit" class="btn btn-sm btn-danger ms-1"><i class="fa-solid fa-trash"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="5" class="text-center py-5 text-muted">Nenhuma turma encontrada.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.TotalPaginas > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPaginas; i++)
            {
                <li class="page-item @(i == Model.PaginaAtual ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@i" asp-route-busca="@Model.TermoBusca">@i</a>
                </li>
            }
        </ul>
    </nav>
}