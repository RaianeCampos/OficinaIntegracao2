@model GestaoOficinas.Application.DTOs.UpdateTurmaDto

@{
    ViewData["Title"] = "Editar Turma";
}

<div class="container-fluid">
    <h2 class="text-primary mb-4"><i class="fa-solid fa-pen-to-square me-2"></i>Editar Turma</h2>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form asp-action="Edit" asp-route-id="@ViewBag.IdTurma">

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="NomeTurma" class="form-label">Nome da Turma</label>
                        <input asp-for="NomeTurma" class="form-control" />
                        <span asp-validation-for="NomeTurma" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PeriodoTurma" class="form-label">Período</label>
                        <select asp-for="PeriodoTurma" class="form-select">
                            <option value="Manhã">Manhã</option>
                            <option value="Tarde">Tarde</option>
                            <option value="Noite">Noite</option>
                        </select>
                        <span asp-validation-for="PeriodoTurma" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="SemestreTurma" class="form-label">Semestre</label>
                        <input asp-for="SemestreTurma" class="form-control" />
                        <span asp-validation-for="SemestreTurma" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4 gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa-solid fa-arrow-left me-1"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-check me-1"></i> Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}