@model IEnumerable<GestaoOficinas.Application.DTOs.DocumentoViewModel>

@{
    ViewData["Title"] = "Documentos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><i class="fa-solid fa-file-contract me-2"></i>Documentos Gerados</h2>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fa-solid fa-plus me-1"></i> Novo Documento
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="text-white" style="background-color: #13293D;">
                    <tr>
                        <th class="ps-4">Tipo</th>
                        <th>Emissão</th>
                        <th>Oficina</th>
                        <th>Emitido Por</th>
                        <th>Destinatário</th>
                        <th class="text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="badge bg-secondary">@item.TipoDocumento</span>
                                </td>
                                <td>@item.Emissao.ToString("dd/MM/yyyy")</td>
                                <td>@item.NomeOficina</td>
                                <td>@item.NomeProfessor</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.NomeAluno))
                                    {
                                        <small class="text-muted d-block">Aluno:</small> 
                                        @item.NomeAluno
                                    }
                                    @if (!string.IsNullOrEmpty(item.NomeEscola))
                                    {
                                        <small class="text-muted d-block">Escola:</small> 
                                        @item.NomeEscola
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.IdDocumento" class="btn btn-sm btn-info text-white" title="Visualizar">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.IdDocumento" method="post" class="d-inline" onsubmit="return confirm('Excluir documento?');">
                                            <button type="submit" class="btn btn-sm btn-danger ms-1" title="Excluir">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="6" class="text-center py-5 text-muted">Nenhum documento encontrado.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>