@model GestaoOficinas.Application.DTOs.CreateDocumentoDto

@{
    ViewData["Title"] = "Novo Documento";
}

<div class="container-fluid">
    <h2 class="text-primary mb-4"><i class="fa-solid fa-shapes me-2"></i>Novo Documento</h2>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form asp-action="Create">
                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label asp-for="NomeOficina" class="form-label">Nome da Oficina</label>
                        <input asp-for="NomeOficina" class="form-control" placeholder="Ex: Robótica Básica" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="TemaOficina" class="form-label">Tema</label>
                        <input asp-for="TemaOficina" class="form-control" placeholder="Ex: Tecnologia" />
                    </div>
                </div>

                <div class="row">
					<!-- Verificar se precisa desses campos no documento, se sim atualziar DTOs
                    <div class="col-md-3 mb-3">
                        <label asp-for="CargaHorariaOficinia" class="form-label">Carga Horária (h)</label>
                        <input asp-for="CargaHorariaOficinia" type="number" class="form-control" />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="DataOficina" class="form-label">Data de Início</label>
                        <input asp-for="DataOficina" type="date" class="form-control" />
                    </div>
                    -->
                    <div class="col-md-3 mb-3">
                        <label asp-for="StatusDocumento" class="form-label">Status</label>
                        <select asp-for="StatusDocumento" class="form-select">
                            <option value="Em Andamento">Em Andamento</option>
                            <option value="Planejamento">Planejamento</option>
                            <option value="Concluída">Concluída</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="IdProfessor" class="form-label">Professor Responsável</label>
                        <select asp-for="IdProfessor" asp-items="ViewBag.ListaProfessores" class="form-select">
                            <option value="">Selecione...</option>
                        </select>
                        <span asp-validation-for="IdProfessor" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4 gap-2">
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>