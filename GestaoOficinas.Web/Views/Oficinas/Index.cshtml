@model GestaoOficinas.Web.Models.OficinaListViewModel

@{
    ViewData["Title"] = "Oficinas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Gestão de Oficinas</h2>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fa-solid fa-plus me-1"></i> Nova Oficina
    </a>
</div>

<form method="get" class="row g-2 mb-4">
    <div class="col-auto">
        <input type="text" name="busca" class="form-control" placeholder="Buscar por nome, tema ou professor..." value="@Model.TermoBusca">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-secondary">Buscar</button>
    </div>
</form>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="text-white" style="background-color: #13293D;">
                    <tr>
                        <th class="ps-4">Nome da Oficina</th>
                        <th>Tema</th>
                        <th>Professor Responsável</th>
                        <th class="text-center">Status</th>
                        <th class="text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Oficinas != null && Model.Oficinas.Any())
                    {
                        foreach (var item in Model.Oficinas)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-secondary">@item.NomeOficina</td>
                                <td>@item.TemaOficina</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fa-solid fa-user-tie me-2 text-muted"></i>
                                        @(string.IsNullOrEmpty(item.NomeProfessorResponsavel) ? "Não atribuído" : item.NomeProfessorResponsavel)
                                    </div>
                                </td>
                                <td class="text-center">
                                    @{
                                        var statusClass = item.StatusOficina switch
                                        {
                                            "Em Andamento" => "bg-success",
                                            "Concluída" => "bg-secondary",
                                            "Planejada" => "bg-warning text-dark",
                                            _ => "bg-info text-dark"
                                        };
                                    }
                                    <span class="badge @statusClass rounded-pill">@item.StatusOficina</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.IdOficina" class="btn btn-sm btn-warning text-white" title="Editar">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.IdOficina" method="post" class="d-inline" onsubmit="return confirm('Deseja realmente excluir esta oficina?');">
                                            <button type="submit" class="btn btn-sm btn-danger ms-1" title="Excluir">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-shapes fa-2x mb-3 d-block"></i>
                                Nenhuma oficina encontrada.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.TotalPaginas > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPaginas; i++)
            {
                <li class="page-item @(i == Model.PaginaAtual ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@i" asp-route-busca="@Model.TermoBusca">@i</a>
                </li>
            }
        </ul>
    </nav>
}