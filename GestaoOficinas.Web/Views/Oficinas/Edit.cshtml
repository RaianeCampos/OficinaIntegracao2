@model GestaoOficinas.Application.DTOs.UpdateOficinaDto

@{
    ViewData["Title"] = "Editar Oficina";
}

<div class="container-fluid">
    <h2 class="text-primary mb-4"><i class="fa-solid fa-pen-to-square me-2"></i>Editar Oficina</h2>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form asp-action="Edit">
                <input type="hidden" name="id" value="@ViewBag.IdOficina" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NomeOficina" class="form-label">Nome da Oficina</label>
                        <input asp-for="NomeOficina" class="form-control" />
                        <span asp-validation-for="NomeOficina" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="TemaOficina" class="form-label">Tema</label>
                        <input asp-for="TemaOficina" class="form-control" />
                        <span asp-validation-for="TemaOficina" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="CargaHorariaOficinia" class="form-label">Carga Horária</label>
                        <input asp-for="CargaHorariaOficinia" class="form-control" type="number" />
                        <span asp-validation-for="CargaHorariaOficinia" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="DataOficina" class="form-label">Data de Realização</label>
                        <input asp-for="DataOficina" class="form-control" type="datetime-local" />
                        <span asp-validation-for="DataOficina" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="IdProfessor" class="form-label">Professor Responsável</label>
                        <select asp-for="IdProfessor" asp-items="ViewBag.ListaProfessores" class="form-select">
                            <option value="">Selecione...</option>
                        </select>
                        <span asp-validation-for="IdProfessor" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="DescricaoOficina" class="form-label">Descrição / Observações</label>
                    <textarea asp-for="DescricaoOficina" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="DescricaoOficina" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4 gap-2">
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}