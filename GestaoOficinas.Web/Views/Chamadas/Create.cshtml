@model GestaoOficinas.Web.Models.RegistroChamadaViewModel

@{
    ViewData["Title"] = "Nova Chamada";
}

<div class="container-fluid">
    <h2 class="text-primary mb-4"><i class="fa-solid fa-check-to-slot me-2"></i>Realizar Chamada</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body bg-light">
            <form method="get" asp-action="Create" class="row align-items-end">
                <div class="col-md-5">
                    <label class="form-label fw-bold">Selecione a Turma</label>
                    <select name="idTurma" asp-for="IdTurma" asp-items="ViewBag.ListaTurmas" class="form-select" onchange="this.form.submit()">
                        <option value="">-- Selecione para carregar alunos --</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Data da Chamada</label>
                    <input type="date" name="data" asp-for="DataChamada" class="form-control" />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-secondary w-100">
                        <i class="fa-solid fa-sync"></i> Carregar Lista
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.IdTurma > 0 && Model.Alunos.Any())
    {
        <form asp-action="SalvarGrade" method="post">
            <input type="hidden" asp-for="IdTurma" />
            <input type="hidden" asp-for="DataChamada" />

            <div class="card shadow-sm border-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="text-white" style="background-color: #13293D;">
                            <tr>
                                <th class="ps-4">Aluno</th>
                                <th>RA</th>
                                <th class="text-center" style="width: 150px;">Presença</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Alunos.Count; i++)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-secondary">
                                        @Model.Alunos[i].NomeAluno
                                        <input type="hidden" asp-for="Alunos[i].IdAluno" />
                                        <input type="hidden" asp-for="Alunos[i].NomeAluno" />
                                    </td>
                                    <td>
                                        @Model.Alunos[i].RaAluno
                                        <input type="hidden" asp-for="Alunos[i].RaAluno" />
                                    </td>
                                    <td class="text-center">
                                        <div class="form-check form-switch d-flex justify-content-center">
                                            <input class="form-check-input" type="checkbox" asp-for="Alunos[i].Presente" style="width: 50px; height: 25px; cursor: pointer;">
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4 gap-2">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-success btn-lg px-5">
                    <i class="fa-solid fa-save me-2"></i> Salvar Chamada
                </button>
            </div>
        </form>
    }
    else if (Model.IdTurma > 0)
    {
        <div class="alert alert-warning text-center mt-4">
            <i class="fa-solid fa-exclamation-triangle me-2"></i>
            Esta turma não possui alunos vinculados ou não foi encontrada.
        </div>
    }
</div>