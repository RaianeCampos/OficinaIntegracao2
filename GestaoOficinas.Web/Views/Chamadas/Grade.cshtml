@model GestaoOficinas.Web.Models.RegistroChamadaViewModel

@{
    ViewData["Title"] = "Registro de Chamada em Lote";
}

<div class="container-fluid">
    <h2 class="text-primary mb-4"><i class="fa-solid fa-clipboard-check me-2"></i>Chamada da Turma</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Grade" class="row align-items-end">
                <div class="col-md-5">
                    <label class="form-label">Selecione a Turma</label>
                    <select name="idTurma" asp-items="ViewBag.ListaTurmas" class="form-select" onchange="this.form.submit()">
                        <option value="">-- Selecione --</option>
                        @if (Model.IdTurma > 0)
                        {
                            <option value="@Model.IdTurma" selected>@Model.NomeTurma</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Data</label>
                    <input type="date" name="data" class="form-control" value="@Model.DataChamada.ToString("yyyy-MM-dd")" onchange="this.form.submit()" />
                </div>
            </form>
        </div>
    </div>

    @if (Model.IdTurma > 0 && Model.Alunos.Any())
    {
        <form asp-action="SalvarGrade" method="post">
            <input type="hidden" asp-for="IdTurma" />
            <input type="hidden" asp-for="DataChamada" />

            <div class="card shadow-sm border-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="text-white" style="background-color: #13293D;">
                            <tr>
                                <th class="ps-4">Aluno</th>
                                <th>RA</th>
                                <th class="text-center" style="width: 150px;">Presença</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Alunos.Count; i++)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-secondary">
                                        @Model.Alunos[i].NomeAluno
                                        <input type="hidden" asp-for="Alunos[i].IdAluno" />
                                        <input type="hidden" asp-for="Alunos[i].NomeAluno" />
                                    </td>
                                    <td>@Model.Alunos[i].RaAluno</td>
                                    <td class="text-center">
                                        <div class="form-check form-switch d-inline-block">
                                            <input class="form-check-input" type="checkbox" asp-for="Alunos[i].Presente" style="transform: scale(1.3);">
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fa-solid fa-save me-2"></i> Salvar Chamada
                </button>
            </div>
        </form>
    }
</div>