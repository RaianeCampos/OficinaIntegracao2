@model IEnumerable<GestaoOficinas.Web.Models.ChamadaResumoViewModel>

@{
    ViewData["Title"] = "Histórico de Chamadas";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fa-solid fa-calendar-check me-2"></i>Histórico de Chamadas</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fa-solid fa-plus me-1"></i> Nova Chamada
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="text-white" style="background-color: #13293D;">
                        <tr>
                            <th class="ps-4">Data</th>
                            <th>Turma</th>
                            <th class="text-center">Presença</th>
                            <th class="text-end pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-secondary">
                                        @item.DataChamada.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        <span class="fw-semibold">@item.NomeTurma</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark border">
                                            @item.TotalPresentes / @item.TotalAlunos Presentes
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="EditGrade"
                                           asp-route-idTurma="@item.IdTurma"
                                           asp-route-data="@item.DataChamada.ToString("yyyy-MM-dd")"
                                           class="btn btn-sm btn-outline-warning" title="Editar Pauta">
                                            <i class="fa-solid fa-pen-to-square"></i> Editar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    Nenhuma chamada registrada.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>